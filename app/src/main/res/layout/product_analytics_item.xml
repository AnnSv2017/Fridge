<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2.5dp"
        android:padding="5dp"
        android:background="@drawable/product_border">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Название"
            android:textSize="20sp"
            style="@style/MainTextStyle"/>

        <TextView
            android:id="@+id/text_view_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="10dp"
            android:text="-1"
            android:textSize="20sp"
            style="@style/MainTextStyle"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/red"/>

        <TextView
            android:id="@+id/text_view_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_overdue"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="10dp"
            android:text="+5"
            android:textSize="20sp"
            style="@style/MainTextStyle"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/green"/>

        <TextView
            android:id="@+id/text_view_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_used"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="10dp"
            android:text="10"
            android:textSize="20sp"
            style="@style/MainTextStyle"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/main_color"/>

    </RelativeLayout>

</LinearLayout>