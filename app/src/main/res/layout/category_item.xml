<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_show_info_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/orange_border">

        <ImageView
            android:id="@+id/image_view_list_switch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close_list" />

        <TextView
            android:id="@+id/text_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_view_list_switch"
            android:layout_centerVertical="true"
            android:text="Тип"
            android:textStyle="bold"
            android:textSize="20sp"
            style="@style/MainTextStyle"/>

        <TextView
            android:id="@+id/text_view_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="10dp"
            android:text="1"
            android:textSize="20sp"
            style="@style/MainTextStyle"
            android:background="@drawable/oval_background"/>

    </RelativeLayout>

    <ListView
    android:id="@+id/products_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
    android:visibility="visible"
    android:divider="@android:color/transparent"
    android:dividerHeight="2.5dp"/>

</LinearLayout>