<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyleBold_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextHintStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Режим рамки -->
        <item name="boxBackgroundMode">outline</item>

        <!-- Цвет самого элемента -->
        <item name="boxBackgroundColor">@color/white</item>

        <!-- Цвет обводки при фокусе -->
        <item name="boxStrokeColor">@color/main_color</item>

        <!-- Цвет текста подсказки -->
        <item name="hintTextColor">@color/main_color</item>

        <!-- Цвет текста в EditText -->
        <item name="android:textColor">@color/gray</item>

        <!-- Толщина обводки -->
        <item name="boxStrokeWidth">2dp</item>

        <!-- Указываем закруглённость углов -->
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>

        <!-- Подсказка при фокусе перемещается наверх -->
        <item name="hintAnimationEnabled">true</item>

        <!-- Настройка размеров -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Стиль для формы с закруглёнными углами -->
    <style name="RoundedCorners" parent="">
        <item name="cornerSize">12dp</item> <!-- Закруглённость углов -->
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="windowMinWidthMinor">85%</item>
    </style>

    <style name="Theme.QrScanner" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>