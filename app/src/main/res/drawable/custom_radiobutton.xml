<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние: выбран -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Внешний кружок -->
            <item
                android:width="24dp"
                android:height="24dp"
                android:drawable="@drawable/circle_outer" />

            <!-- Внутренний кружок -->
            <item
                android:width="12dp"
                android:height="12dp"
                android:gravity="center"
                android:drawable="@drawable/circle_inner" />
        </layer-list>
    </item>

    <!-- Состояние: не выбран -->
    <item>
        <layer-list>
            <!-- Внешний кружок -->
            <item
                android:width="24dp"
                android:height="24dp"
                android:drawable="@drawable/circle_outer_unchecked" />
        </layer-list>
    </item>

</selector>
